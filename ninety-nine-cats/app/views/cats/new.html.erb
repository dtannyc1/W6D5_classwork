<form action="<%= cats_url %>" method="POST">
    <label for="name">Name:
        <input type="text" id="name" name="cats[name]" value="">
    </label>
    <br>

    <label for="color">Color:</label>
    <select name="cats[color]" id="color">
        <option disabled selected>-- select a color --</option>
        <option value="gray">Gray</option>
        <option value="blue">Blue</option>
        <option value="white">White</option>
        <option value="black">Black</option>
        <option value="orange">Orange</option>
    </select>
    <br>

    <label for="birth_date">Birth Date:
        <input type="date" id="birth_date" name="cats[birth_date]" value="">
    </label>
    <br>

    <input type="radio" name="cats[sex]" id="sexM" value="M">
    <label for="sexM">Male</label>

    <input type="radio" name="cats[sex]" id="sexF" value="F">
    <label for="sexF">Female</label>

    <br>

    <label for="description">Description:
        <textarea name="cats[description]" id="description" cols="30" rows="10"></textarea>
    </label>
    <br>

    <input type="submit" value="Send to Cat Factory">
</form>
