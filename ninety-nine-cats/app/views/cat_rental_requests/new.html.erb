<form action="<%=cat_rental_requests_url%>" method="POST">
    <label for="cat">Cat:</label>
    <select name="cat_rental_request[cat_id]" id="cat">
        <option disabled <%=@cat_rental_request.cat_id.nil? ? "selected" : "" %> >-- select a cat --</option>
        <% Cat.all.each do |cat| %>
           <option value="<%=cat.id %>" <%= @cat_rental_request.cat_id == cat.id ? "selected" : "" %> ><%=cat.name %></option>
        <% end %>
    </select>
    <br>
    <label for="start_date">Start Date
        <input type="date" name="cat_rental_request[start_date]" id="start_date" value="<%=@cat_rental_request.start_date%>">
        
    </label>
    <br>
    <label for="end_date">End Date
        <input type="date" name="cat_rental_request[end_date]" id="end_date" value="<%=@cat_rental_request.end_date%>">
    </label>
    <br>
    <input type="submit" value="Make a request">
</form>